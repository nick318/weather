<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="1719940468702-1-add-weather" author="Nikita Salomatin">
        <createTable tableName="weather">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city_id" type="int">
                <constraints nullable="false" unique="true" uniqueConstraintName="uq_weather_city_id"/>
            </column>
            <column name="city_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="main" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="temp" type="decimal">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>